@using CarInsuranceQuoteMVC.ViewModels
@model List<CarInsuranceVm>

<div class="row no-gutters m-3">
    <div class="card-header text-center">
        <h2 class="m-0">Quotes Issued:</h2>
    </div>
    <div class="card-body d-inline">
        @foreach (var quote in Model)
        {
            using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {
                <div class="row no-gutters text-center">
                    <div class="form=group text-center col-md-12">
                        First Name: @CarInsuranceVm.FirstName
                    </div>
                    <div class="form=group text-center col-md-12">
                        Last Name: @CarInsuranceVm.LastName
                    </div>
                    <div class="form=group text-center col-md-12">
                        Email Address: @CarInsuranceVm.EmailAddress
                    </div>
                    <div class="form=group text-center col-md-12">
                        Quote: $@CarInsuranceVm.FinalQuote
                        <br />
                        <br />
                    </div>
                </div>
            }
        }
    </div>
</div>
